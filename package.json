{
	"name": "markdown-graphviz-preview",
	"displayName": "markdown-graphviz-preview",
	"description": "Preview Graphviz diagrams for your markdown in Visual Studio Code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.97.0"
	},
	"categories": ["Visualization"],
	"activationEvents": [],
	"main": "./out/extension.js",
	"preview": true,
	"contributes": {
		"markdown.markdownItPlugins": true,
		"markdown.previewSecurity": "allow-scripts",
		"markdown.previewStyles": ["./src/style.css"],
		"markdown.previewScripts": [
			"./node_modules/viz.js/viz.js",
			"./node_modules/viz.js/full.render.js"
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/markdown-it": "^14.1.2",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.13.5",
		"@types/vscode": "^1.97.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@viz-js/viz": "^3.11.0",
		"markdown-it": "^14.1.0"
	},
	"icon": "./docs/extension-logo.png"
}
